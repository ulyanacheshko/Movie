<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Movie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Movie" parent="Base.Theme.Movie" />
    <style name="CardView.MovieItemPoster" parent="">
        <item name="android:elevation">24dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ImageView.MovieItemPoster" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>
    <style name="TextView" parent="Theme.Movie">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="TextView.TextBold" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">900</item>
    </style>
    <style name="TextView.PG" parent="TextView.TextBold">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:background">@drawable/pg_shape</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">47dp</item>
    </style>

</resources>